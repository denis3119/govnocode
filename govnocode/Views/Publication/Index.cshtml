@using Resources
@model IEnumerable<govnocode.Models.Publication>

@{
    ViewBag.Title = Resource.MyPublication;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resource.MyPublication</h2>

<p>
    @*@Html.ActionLink(@Resource.Create, "Create")*@
    <a href="@Url.Action("Create")" class="btn btn-info">@Resource.Create</a>
</p>
                     
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Lang)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Title)*@
                @{
                   @Html.Raw(item.Title.Length > 50 ? (item.Title.Substring(0, 49)+ "....") : (item.Title))
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Lang)
            </td>
            <td>
                @Html.ActionLink(Resource.Edit, "Edit", new {id = item.Id}) |
                @Html.ActionLink(Resource.Details, "Details", new {id = item.Id}) |
                @Html.ActionLink(Resource.Delete, "Delete", new {id = item.Id})
               
            </td>
        </tr>
    }

</table>