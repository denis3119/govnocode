@using govnocode.Models
@using Resources
@model govnocode.Models.Publication

@{
    ViewBag.Title = @Resource.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resource.Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
        <h4>@Resource.Publication</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-1">@Resource.Lang</label>
            <div class="col-md-10">
                <select name="Lang" class="form-control">
                    <option value="C#">C#</option>
                    <option value="Java">Java</option>
                    <option value="Ruby">Ruby</option>
                    <option value="Python">Python</option>
                </select>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                <textarea class="form-control" id="Text" name="Text" type="text" data-provide="markdown" style="max-width: 100%" rows="10">@Html.DisplayFor(model => model.Text)</textarea>
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden="">
            @Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @value = 0 } })
                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                <textarea class="form-control" id="Code" name="Code" type="text" style="max-width: 100%" rows="10">@Html.DisplayFor(model => model.Code)</textarea>
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TagString, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TagString, new { htmlAttributes = new { @class = "form-control, hidden " } })
                @Html.ValidationMessageFor(model => model.TagString, "", new {@class = "text-danger"})
                <ul id="myTags"></ul>
            </div>
         </div>

                                    
           <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="publication" value="@Resource.Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink(Resource.BackToList, "Index")
</div>
